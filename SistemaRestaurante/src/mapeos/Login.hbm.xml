<?xml version = "1.0" encoding = "UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="datos.Login" table="login">
		<id column="idLogin" name="idLogin">
			<generator class="identity" />
		</id>
		<property name="nombreUsuario" type="string" column="nombreUsuario" />
		<property name="password" type="string" column="password" />
		<set name="usuario" table="usuario" order-by="idUsuario asc"
			inverse="true" lazy="true" fetch="select">
			<key column="idLogin" not-null="true" />
			<one-to-many class="datos.Usuario" />
		</set>
	</class>
</hibernate-mapping>